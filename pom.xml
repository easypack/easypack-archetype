	</scm>

	<issueManagement>
	   <url>https://github.com/easypack/easypack-archetype/issues</url>
	   <system>GitHub Issues</system>
	</issueManagement>

	<properties>
	   <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
